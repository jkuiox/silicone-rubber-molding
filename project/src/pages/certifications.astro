---
import Layout from '../layouts/Layout.astro';
import CertificationGrid from '../components/certifications/CertificationGrid.astro';
import QualityStandards from '../components/certifications/QualityStandards.astro';

const description = "Tayang Industry maintains the highest quality standards with ISO 9001:2015 and ISO 13485 certifications for silicone manufacturing.";
---

<Layout 
  title="Quality Certifications"
  description={description}
>
  <div class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Our Certifications
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          International quality standards and certifications.
        </p>
      </div>
      
      <CertificationGrid />
      <QualityStandards />
    </div>
  </div>
</Layout>