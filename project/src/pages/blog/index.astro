---
import Layout from '../../layouts/Layout.astro';
import BlogGrid from '../../components/blog/BlogGrid.astro';
import Categories from '../../components/blog/Categories.astro';

const description = "Stay updated with the latest news, insights, and innovations in silicone manufacturing from Tayang Industry's expert team.";
---

<Layout 
  title="Silicone Industry Blog"
  description={description}
>
  <div class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Industry Insights
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Expert perspectives on silicone manufacturing and industry trends.
        </p>
      </div>
      
      <Categories />
      <BlogGrid />
    </div>
  </div>
</Layout>