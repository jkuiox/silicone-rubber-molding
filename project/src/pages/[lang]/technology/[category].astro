---
import Layout from '../../../layouts/Layout.astro';
import { languages } from '../../../i18n/ui';

export async function getStaticPaths() {
  const categories = ['process', 'research', 'quality'];
  const paths = [];

  for (const lang of Object.keys(languages)) {
    for (const category of categories) {
      paths.push({
        params: { lang, category }
      });
    }
  }

  return paths;
}

const { lang, category } = Astro.params;

const titles = {
  process: 'Manufacturing Process',
  research: 'R&D Capabilities',
  quality: 'Quality Control'
};

const descriptions = {
  process: 'Advanced silicone manufacturing processes and technologies.',
  research: 'Cutting-edge research and development in silicone solutions.',
  quality: 'Comprehensive quality control systems and standards.'
};

const title = titles[category] || 'Technology';
const description = descriptions[category] || 'Explore our technological capabilities.';
---

<Layout 
  title={title}
  description={description}
  lang={lang}
>
  <div class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          {title}
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          {description}
        </p>
      </div>
    </div>
  </div>
</Layout>