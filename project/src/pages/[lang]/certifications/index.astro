---
import Layout from '../../../layouts/Layout.astro';
import { languages } from '../../../i18n/ui';

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;

const certifications = [
  {
    name: 'ISO 9001:2015',
    description: 'Quality Management System certification ensuring consistent, high-quality manufacturing processes.',
    image: '/images/certifications/iso-9001.jpg',
    details: 'Our ISO 9001:2015 certification demonstrates our commitment to maintaining the highest quality standards in all aspects of our operations.'
  },
  {
    name: 'ISO 13485:2016',
    description: 'Medical Devices Quality Management System certification for healthcare products.',
    image: '/images/certifications/iso-13485.jpg',
    details: 'This certification validates our capability to manufacture medical-grade silicone components that meet stringent healthcare industry requirements.'
  },
  {
    name: 'IATF 16949:2016',
    description: 'Automotive Quality Management System certification.',
    image: '/images/certifications/iatf-16949.jpg',
    details: 'Our IATF certification ensures we meet the demanding quality standards of the automotive industry.'
  }
];

const qualityStandards = [
  {
    title: 'Quality Control Process',
    items: [
      'Raw material inspection and testing',
      'In-process quality checks',
      'Final product inspection',
      'Batch tracking and documentation'
    ]
  },
  {
    title: 'Testing Capabilities',
    items: [
      'Material composition analysis',
      'Physical properties testing',
      'Performance validation',
      'Durability assessment'
    ]
  }
];
---

<Layout 
  title="Quality Certifications"
  description="Discover our comprehensive quality certifications and standards that ensure excellence in silicone manufacturing."
  lang={lang}
>
  <div class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Our Certifications
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          International quality standards and certifications
        </p>
      </div>

      <div class="mt-16 grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {certifications.map((cert) => (
          <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <div class="p-6">
              <img
                src={cert.image}
                alt={cert.name}
                class="h-32 w-auto mx-auto mb-6"
              />
              <h3 class="text-xl font-semibold text-gray-900">{cert.name}</h3>
              <p class="mt-2 text-sm text-gray-500">{cert.description}</p>
              <p class="mt-4 text-sm text-gray-600">{cert.details}</p>
            </div>
          </div>
        ))}
      </div>

      <div class="mt-24">
        <h2 class="text-3xl font-bold text-gray-900 text-center">Quality Standards</h2>
        <div class="mt-12 grid gap-8 md:grid-cols-2">
          {qualityStandards.map((standard) => (
            <div class="bg-gray-50 rounded-lg p-8">
              <h3 class="text-xl font-semibold text-gray-900">{standard.title}</h3>
              <ul class="mt-4 space-y-4">
                {standard.items.map((item) => (
                  <li class="flex items-start">
                    <svg class="h-6 w-6 text-primary-600 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="ml-3 text-gray-700">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</Layout>