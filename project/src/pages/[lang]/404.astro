---
import Layout from '../../layouts/Layout.astro';
import { languages } from '../../i18n/ui';

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang }
  }));
}

const { lang } = Astro.params;
---

<Layout 
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
  lang={lang}
>
  <div class="min-h-screen pt-24 pb-12 flex flex-col">
    <main class="flex-grow flex flex-col justify-center max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex-shrink-0 flex justify-center">
        <a href="/" class="inline-flex">
          <span class="sr-only">Tayang Industry</span>
          <img
            class="h-12 w-auto"
            src="/images/logo.svg"
            alt="Tayang Industry"
          />
        </a>
      </div>
      <div class="py-16">
        <div class="text-center">
          <p class="text-sm font-semibold text-primary-600 uppercase tracking-wide">404 error</p>
          <h1 class="mt-2 text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl">Page not found.</h1>
          <p class="mt-2 text-base text-gray-500">Sorry, we couldn't find the page you're looking for.</p>
          <div class="mt-6">
            <a href={`/${lang}`} class="text-base font-medium text-primary-600 hover:text-primary-500">
              Go back home<span aria-hidden="true"> &rarr;</span>
            </a>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>