---
import Layout from '../layouts/Layout.astro';
import ProductGrid from '../components/products/ProductGrid.astro';
import ProductCategories from '../components/products/ProductCategories.astro';

const description = "Explore Tayang Industry's comprehensive range of silicone products including medical grade components, consumer electronics parts, and custom molding solutions.";
---

<Layout 
  title="Silicone Products & Solutions"
  description={description}
>
  <div class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Silicone Products
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Premium silicone solutions engineered for excellence across industries.
        </p>
      </div>
      
      <ProductCategories />
      <ProductGrid />
    </div>
  </div>
</Layout>