---
import Layout from '../layouts/Layout.astro';
import FAQCategories from '../components/faq/FAQCategories.astro';
import FAQList from '../components/faq/FAQList.astro';
import ContactCTA from '../components/faq/ContactCTA.astro';

const description = "Find answers to common questions about Tayang Industry's silicone manufacturing services, products, and capabilities.";
---

<Layout 
  title="Frequently Asked Questions"
  description={description}
>
  <div class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          FAQ
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Answers to your questions about our services.
        </p>
      </div>
      
      <FAQCategories />
      <FAQList />
      <ContactCTA />
    </div>
  </div>
</Layout>