---
import Layout from '../layouts/Layout.astro';
import TechSpecs from '../components/technology/TechSpecs.astro';
import ProcessFlow from '../components/technology/ProcessFlow.astro';

const description = "Discover Tayang Industry's advanced silicone manufacturing technology, including state-of-the-art molding processes and quality control systems.";
---

<Layout 
  title="Manufacturing Technology"
  description={description}
>
  <div class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          Our Technology
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Advanced manufacturing processes for precision silicone solutions.
        </p>
      </div>
      
      <TechSpecs />
      <ProcessFlow />
    </div>
  </div>
</Layout>