---
import Layout from '../layouts/Layout.astro';
import CompanyHistory from '../components/about/CompanyHistory.astro';
import TeamSection from '../components/about/TeamSection.astro';
import Values from '../components/about/Values.astro';

const description = "Learn about Tayang Industry's journey as a leading silicone manufacturer, our values, and commitment to innovation and quality.";
---

<Layout 
  title="About Tayang Industry"
  description={description}
>
  <div class="pt-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
          About Us
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          A legacy of excellence in silicone manufacturing.
        </p>
      </div>
      
      <CompanyHistory />
      <Values />
      <TeamSection />
    </div>
  </div>
</Layout>