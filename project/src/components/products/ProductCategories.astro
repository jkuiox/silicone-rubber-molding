---
const categories = [
  { name: 'Medical', href: '#medical', count: '15 Products' },
  { name: 'Electronics', href: '#electronics', count: '12 Products' },
  { name: 'Automotive', href: '#automotive', count: '8 Products' },
  { name: 'Industrial', href: '#industrial', count: '10 Products' }
];
---

<div class="mt-8">
  <div class="flex space-x-6 overflow-x-auto pb-4">
    {categories.map((category) => (
      <a
        href={category.href}
        class="flex-none rounded-lg bg-gray-100 px-4 py-2 text-sm font-medium text-gray-900 hover:bg-gray-200"
      >
        {category.name}
        <span class="ml-2 text-gray-500">{category.count}</span>
      </a>
    ))}
  </div>
</div>